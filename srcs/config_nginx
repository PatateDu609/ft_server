server {
	listen 80;
	listen [::]:80;
	listen 443 ssl;

	server_name boucetta.com *.boucetta.com;

	ssl_certificate /root/boucetta.com.pem;
	ssl_certificate_key /root/boucetta.com-key.pem;

	root /var/www/boucetta.com;
	index index.php index.html;

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/var/run/php/php7.3-fpm.sock;
	}
}